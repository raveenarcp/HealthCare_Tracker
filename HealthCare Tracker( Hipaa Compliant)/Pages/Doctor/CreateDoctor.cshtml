@page
@model HealthCare.Pages.Doctor.CreateDoctorModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Doctor</title>
    <style>
        form {
            width: 80%;
            margin-top: 20px;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        button {
            padding: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h2>Create Doctor</h2>

    <form method="post">

        <div>
            <label for="DoctorName">Doctor Name:</label>
            <input type="text" id="DoctorName" name="DoctorName" asp-for="@Model.NewDoctor.DoctorName" required>
        </div>

        <div>
            <label for="LicenseNumber">License Number:</label>
            <input type="text" id="LicenseNumber" name="LicenseNumber" asp-for="@Model.NewDoctor.LicenseNumber" required>
        </div>

        <div>
            <label for="YearsOfExperience">Years of Experience:</label>
            <input type="number" id="YearsOfExperience" name="YearsOfExperience" asp-for="@Model.NewDoctor.YearsOfExperience" required>
        </div>

        <div>
            <label for="Education">Education:</label>
            <input type="text" id="Education" name="Education" asp-for="@Model.NewDoctor.Education" required>
        </div>

        <div>
            <label for="AvailabilitySchedule">Availability Schedule:</label>
            <input type="text" id="AvailabilitySchedule" name="AvailabilitySchedule" asp-for="@Model.NewDoctor.AvailabilitySchedule" required>
        </div>

        <div>
            <label for="Specialization">Specialization:</label>
            <input type="text" id="Specialization" name="Specialization" asp-for="@Model.NewDoctor.Specialization" required>
        </div>

        <button type="submit">Submit</button>
    </form>

</body>
</html>