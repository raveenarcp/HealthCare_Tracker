@page
@model HealthCare.Pages.Prescription.CreatePrescriptionModel
@{
    ViewData["Title"] = "Create Prescription";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="TreatmentID">Select Treatment:</label>
        <select class="form-control" asp-for="TreatmentID" required>
            <option value="">-- Select Treatment --</option>
            @foreach (var treatment in Model.Treatments)
            {
                <option value="@treatment.TreatmentID">@treatment.TreatmentID</option>
            }
        </select>
        <span asp-validation-for="TreatmentID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="MedicineName">Medicine Name:</label>
        <input type="text" class="form-control" asp-for="MedicineName" required>
        <span asp-validation-for="MedicineName" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label for="Dosage">Dosage:</label>
        <input type="text" class="form-control" asp-for="Dosage" required>
        <span asp-validation-for="Dosage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Prescription</button>
</form>
